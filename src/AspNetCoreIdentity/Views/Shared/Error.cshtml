@model ErrorViewModel
@{
    ViewData["Title"] = Model == null? "Erro": Model.Titulo;
}

@if (Model == null)
{
    <div>
        <h2>Ocorreu um erro. O time de desenvolvimento já foi notificado, tente novamente mais tarde</h2>
    </div>
}
else
{
    <h1>@Html.Raw(Model.Titulo)</h1>
    <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
}

